<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Rest-assured API Test Suite" verbose="1" parallel="false">

    <test name="DEBUG" >
        <groups>
            <run>
                <include name="debug"/>
            </run>
        </groups>

        <packages>
            <package name="com.api.*" />
        </packages>
    </test>

    <test name="DocumentTest" >
        <groups>
            <run>
                <include name="Document.*"/>
            </run>
        </groups>

        <packages>
            <package name="com.api.*" />
        </packages>
    </test>

</suite>
